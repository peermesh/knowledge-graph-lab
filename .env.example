# Publishing Module Configuration
# Copy this file to .env and update with your actual credentials

# Application Settings
DEBUG=false
PORT=8080
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration (PostgreSQL)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=publishing_db
DATABASE_USER=publishing_user
DATABASE_PASSWORD=publishing_pass

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS SES Email Service
# Get credentials from AWS Console: https://console.aws.amazon.com/iam/
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
SES_SENDER_EMAIL=noreply@yourdomain.com

# Slack API Configuration
# Create app at: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Discord API Configuration
# Create app at: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# AI Module Integration
AI_MODULE_URL=http://localhost:8001
AI_API_KEY=your-ai-api-key

# Backend Module Integration
BACKEND_MODULE_URL=http://localhost:8000
BACKEND_API_KEY=your-backend-api-key

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance Settings
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
MAX_CONNECTIONS=100

# Analytics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
