# Publishing Module Environment Configuration
# Copy this file to .env and update with your actual values for production
# For standalone testing, these placeholder values work fine

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=publishing_db
DATABASE_USER=publishing_user
DATABASE_PASSWORD=publishing_pass

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Application Settings
DEBUG=false
PORT=8080
LOG_LEVEL=INFO

# AWS SES Configuration (for email delivery)
# Set these to real values for production email delivery
# For standalone testing, placeholder values work fine (system runs in placeholder mode)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=placeholder
AWS_SECRET_ACCESS_KEY=placeholder
SES_SENDER_EMAIL=noreply@example.com

# Slack API Configuration (for Slack integration)
# Set these to real values for production Slack integration
# For standalone testing, placeholder values work fine (system runs in placeholder mode)
SLACK_BOT_TOKEN=placeholder
SLACK_CLIENT_ID=placeholder
SLACK_CLIENT_SECRET=placeholder
SLACK_CHANNEL_ID=placeholder

# Discord API Configuration (for Discord integration)
# Set these to real values for production Discord integration
# For standalone testing, placeholder values work fine (system runs in placeholder mode)
DISCORD_BOT_TOKEN=placeholder
DISCORD_CLIENT_ID=placeholder
DISCORD_CLIENT_SECRET=placeholder
DISCORD_CHANNEL_ID=placeholder
