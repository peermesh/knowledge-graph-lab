# AWS SES Configuration
# Copy this file to .env and fill in your actual credentials
# Get these credentials from your project admin

AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-2
SES_SENDER_EMAIL=noreply@distributedcreatives.org

# Database Configuration (for docker-compose)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=publishing_db
DATABASE_USER=publishing_user
DATABASE_PASSWORD=publishing_pass

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Testing
TEST_EMAIL=your-email@example.com

# Optional: Slack/Discord (leave as placeholder if not using)
SLACK_BOT_TOKEN=placeholder
SLACK_CLIENT_ID=placeholder
SLACK_CLIENT_SECRET=placeholder
DISCORD_BOT_TOKEN=placeholder
DISCORD_CLIENT_ID=placeholder
DISCORD_CLIENT_SECRET=placeholder

# Application Settings
DEBUG=false
PORT=8080
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

